@inject SignInManager<Microsoft.AspNetCore.Identity.IdentityUser> SignInManager
@inject UserManager<Microsoft.AspNetCore.Identity.IdentityUser> UserManager

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Góc Bếp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@700&family=Roboto:wght@400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* <link rel="stylesheet" href="~/GocBep.styles.css" asp-append-version="true" /> *@ @* Usually for Blazor component styles *@

    <!-- Add this line for page-specific styles -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <header class="header fixed-top">
        <div class="header2 container">
            <div class="left-sector">
                <a class="avatar" asp-page="/Index">
                    <img class="avatar2" src="@Url.Content("~/figma-assets/icons/avatar1.svg")" alt="Góc Bếp Logo" />
                    <div class="g-c-b-p">Góc Bếp</div>
                </a>
                <nav class="tab">
                    <div class="tabs-variants">
                        <div class="tabs-styles">
                            <div class="tabs-base">
                                <div class="content">
                                    <a asp-page="/Index" class="nav-link-figma">Trang chủ</a>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (SignInManager.IsSignedIn(User))
                    {
                        <div class="tabs-variants">
                            <div class="tabs-styles">
                                <div class="tabs-base">
                                    <div class="content">
                                        <a asp-page="/Recipes/Create" class="nav-link-figma">Đăng công thức</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tabs-variants">
                            <div class="tabs-styles">
                                <div class="tabs-base">
                                    <div class="content">
                                        <a asp-page="/Profile/Index" class="nav-link-figma">Trang cá nhân</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </nav>
            </div>

            <form asp-page="/Search" method="get" class="d-flex ms-auto me-3 search-form-custom" role="search">
                <input class="form-control search-input-custom" type="search" name="query" placeholder="Tìm kiếm món ăn..." aria-label="Tìm kiếm món ăn">
                <button class="btn btn-search-custom" type="submit">
                    <i class="fas fa-search"></i>
                </button>
            </form>

            <div class="group-button">
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <div class="container page-container-main">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer border-top">
        <div class="_2025-g-c-b-p-hi-n-i-all-rights-reserved">
            © @DateTime.Now.Year - Góc Bếp Hiện Đại. All Rights Reserved.
        </div>
        <div class="links">
            <a asp-page="/Privacy" class="nav-link">Chính sách bảo mật</a>
            <span class="devider"></span>
            <a asp-page="/Terms" class="nav-link">Điều khoản sử dụng</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>